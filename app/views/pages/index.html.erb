<div class="container">
  <div class="jumbotron">
    <h1>Welcome to the TheTranslator</h1>
      <table class="table">
        <thead>
          <th>Word</th>
          <th>Sound</th>
          <th>Meaning</th>
        </thead>
        <% @words.each do |word| %>
          <tr>
            <td><%= word.word %></td>
            <td><%= link_to "Speak", page_path(word) %></td>
            <td><%= word.meaning %></td>
          </tr>
        <% end %>
      </table>
  </div>
</div>
