<div class="container">
    <%= form_for "exam", url: exams_path, method: :post do |f| %>
      <% @questions.each do |question| %>
        <%= question.name  %> <br>
        <%= f.fields_for :options do |ff| %>
          <% question.options.each do |option| %>
            &nbsp;&nbsp; <%= ff.radio_button question.id, option.id %>
            <%= f.label :option, option.option %><br>
          <% end %><br>
        <% end %>
      <% end %>
      <%= f.submit %>
    <% end %>
</div>
